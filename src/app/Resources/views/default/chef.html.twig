{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-xs-12"><h3>{{ 'profile.show.heading.open'|trans({}, 'AppBundle') }}</h3></div>
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Holidays</th>
                    <th>Days</th>
                    <th>Days left</th>
                    <th>Accept</th>
                    <th>Declined</th>
                </tr>
                </thead>
                <tbody>
                {% for list in list %}
                    {% if list.closed == 0 %}
                    <tr>
                        <td>{{ list.id }}</td>
                        <td>{{ list.user.username }}</td>
                        <td>{{ list.holidayFrom | date('d-m-Y') }} - {{ list.holidayTo | date('d-m-Y') }}</td>
                        <td>{{ list.days }}</td>
                        <td>{{ list.user.vacation }}</td>
                        <td><a href="{{ path('accept',{'id':list.id}) }}"><button type="button" class="btn btn-xs btn-success">accept</button></a></td>
                        <td><a href="{{ path('noaccept',{'id':list.id}) }}"><button type="button" class="btn btn-xs btn-danger">declined</button></a></td>
                    </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- accept !-->
        <div class="col-xs-12"><h3>{{ 'profile.show.heading.accept'|trans({}, 'AppBundle') }}</h3></div>
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Holidays</th>
                    <th>Days</th>
                    <th>Days left</th>
                    <th>Accept</th>
                    <th>Declined</th>
                </tr>
                </thead>
                <tbody>
                       {% for list in list %}
                           {% if list.closed == 0 %}
                            <tr>
                                <td>{{ list.id }}</td>
                                <td>{{ list.user.username }}</td>
                                <td>{{ list.holidayFrom | date('d-m-Y') }} - {{ list.holidayTo | date('d-m-Y') }}</td>
                                <td>{{ list.days }}</td>
                                 <td>{{ list.user.vacation }}</td>
                                {% if list.accept == 0 %}
                                    <td><label class="label label-success">accept</label></td>
                                    <td></td>
                                {% else %}
                                    <td></td>
                                    <td><label class="label label-danger">declined</label></td>
                                {% endif %}
                                </tr>
                           {% endif %}
                        {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    <style>

    </style>
{% endblock %}